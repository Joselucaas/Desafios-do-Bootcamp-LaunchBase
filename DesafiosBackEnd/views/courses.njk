{% extends "layout.njk" %}

    {% block head %}
        <title>Bootcamp's Rocketseat</title>       
        <link rel="stylesheet" href="/main.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">      
        <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon">
    {% endblock %}


    {% block content%}
        <h1>Conte√∫dos</h1>

        <section class="cards">

            {% for item in items %}
            <div class="card" id="{{item.id}}">

                <div class="{{item.circle}}">
                    <p id="{{item.id_main}}">{{item.number}}</p>
                </div>

                <div class="image">
                    <img src="{{item.image}}" alt="{{item.id}}" srcset="">
                </div>

                <div class="description" id='{{item.id_main}}'>
                    <p>{{item.description}}</p>
                </div>


                <div class="info" id="{{item.id_main}}">
                    <p id="mod">{{item.modules}}</p>
                    <p id="info-money">{{item.price}}</p>
                </div>
            </div>
            {% endfor %}
        </section>

        <div class="modal-overlay" >
            <div class="modal">
                <a class="close-modal">
                    <i class="material-icons">close</i>
                </a>

                <a class="expandir">
                    <i class="material-icons">open_in_full</i>
                </a>
            
            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
            </div>
        </div>
    {% endblock %}

    {% block script %} 
        <script src="/scripts.js"></script> 
    {% endblock %}
    