{% extends "layout.njk" %}

    {% block head %}
        <title>Bootcamp's Rocketseat</title>       
        <link rel="stylesheet" href="/main.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">      
        <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon">
    {% endblock %}


    {% block content%}
        <h1>Conteúdos</h1>

        <section class="cards">

            <div class="card" id="starter">

                <div class="circle">
                    <p>01</p>
                </div>

                <div class="image">
                    <img src="/img/starter.svg" alt="" srcset="">
                </div>

                <div class="description">
                    <p><spam>Torne-se um programador desejado</spam> no mercado com esses cursos gratuitos.</p>
                </div>


                <div class="info">
                    <p id="mod">5 módulos</p>
                    <p id="info-money">Free</p>
                </div>
            </div>

            <div class="card"  id="launchbase">

                <div class="circle-lb">
                    <p id="lb">02</p>
                </div>

                <div class="image">
                    <img src="/img/launchbase.svg" alt="" srcset="">
                </div>

                <div class="description" id="lb">
                    <p><spam>Domine programação do zero</spam> e tenha acesso às melhores oportunidades do mercado.</p>
                </div>

                <div class="info" id="lb">
                    <p id="mod">16 módulos</p>
                    <p id="info-money">Pago</p>
                </div>
            </div>

            <div class="card" id="gostack">

                <div class="circle-go">
                    <p>03</p>
                </div>

                <div class="image">
                    <img src="/img/gostack.svg" alt="" srcset="">
                </div>

                <div class="description" id="go">
                    <p><spam>Treinamento imersivo</spam> nas tecnologias mais modernas de desenvolvimento web e mobile.</p>
                </div>


                <div class="info" id="go">
                    <p id="mod">27 módulos</p>
                    <p id="info-money">Pago</p>
                </div>
            </div>
        </section>

        <div class="modal-overlay" >
            <div class="modal">
                <a class="close-modal">
                    <i class="material-icons">close</i>
                </a>

                <a class="expandir">
                    <i class="material-icons">open_in_full</i>
                </a>
            
            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
            </div>
        </div>
    {% endblock %}

    {% block script %} 
        <script src="/scripts.js"></script> 
    {% endblock %}
    